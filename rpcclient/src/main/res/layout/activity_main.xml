<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_getBookList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取书籍列表"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_addBook_inOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="InOut 添加书籍"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_getBookList"/>

    <Button
        android:id="@+id/btn_addBook_In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In添加书籍"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_addBook_inOut"/>

    <Button
        android:id="@+id/btn_addBook_Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Out 添加书籍"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_addBook_In"/>

</androidx.constraintlayout.widget.ConstraintLayout>